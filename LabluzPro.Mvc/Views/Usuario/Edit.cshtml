@model LabluzPro.Domain.Entities.Usuario
@using LabluzPro.Domain.Entities
@using LabluzPro.Domain.Diversos

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Editar Usuário</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />

                        <form enctype="multipart/form-data" asp-action="Edit" class="form-horizontal form-label-left">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                            <div class="form-group">
                                <label asp-for="sNome" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-5 col-sm-6 col-xs-12">
                                    <input asp-for="sNome" class="form-control col-md-7 col-xs-12" />
                                </div>
                                <span asp-validation-for="sNome" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="sEmail" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-5 col-sm-6 col-xs-12">
                                    <input asp-for="sEmail" class="form-control col-md-7 col-xs-12" />
                                </div>
                                <span asp-validation-for="sEmail" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="sTelefone" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-2 col-sm-6 col-xs-12">
                                    <input asp-for="sTelefone" class="form-control col-md-7 col-xs-12" data-inputmask="'mask' : '(99) 99999-9999'" />
                                </div>

                                <span asp-validation-for="sTelefone" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="sSenha" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-2 col-sm-6 col-xs-12">
                                    <input asp-for="sSenha" type="password" class="form-control col-md-7 col-xs-12" />
                                </div>

                                <span asp-validation-for="sSenha" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="bAtivo" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-1 col-sm-6 col-xs-12">
                                    <input asp-for="bAtivo" type="checkbox" class="col-md-7 col-xs-12" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="sImagem" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                                <div class="col-md-5 col-sm-6 col-xs-12">
                                    <input asp-for="sImagem" type="file" class="form-control col-md-7 col-xs-12" />
                                </div>

                                <span asp-validation-for="sImagem" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Páginas</label>

                                <div class="col-md-3 col-sm-6 col-xs-12">
                                    @foreach (UsuarioPagina item in ViewBag.Paginas)
                                    {
                                        var check = "";

                                        if (Model.UsuarioPagina.Where(p => p.idPagina == item.idPagina).Count() > 0)
                                        {
                                            check = "checked";
                                        }
                                        else
                                        {
                                            check = "";
                                        }

                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox"
                                                       @check
                                                       name="PaginaSelecionada"
                                                       value="@item.Pagina.ID" /> @item.Pagina.sNome
                                                </label>
                                            </div>
                                        }
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "Usuario")'">Voltar</button>
                                    <button type="submit" class="btn btn-success">Salvar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
