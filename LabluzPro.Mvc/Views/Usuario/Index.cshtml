@model IEnumerable<LabluzPro.Domain.Entities.Usuario>

@{
    ViewData["Title"] = "Index";
}

<div class="right_col" role="main">
    <div class="col-md-12 col-sm-12 col-xs-12">
        @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)
    </div>

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2> <a asp-action="Create">Novo Usuário</a></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.sNome)</th>
                            <th>@Html.DisplayNameFor(model => model.sEmail)</th>
                            <th>@Html.DisplayNameFor(model => model.sTelefone)</th>
                            <th>@Html.DisplayNameFor(model => model.bAtivo)</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sNome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sEmail)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sTelefone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.bAtivo)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Usuario" , new { id = item.ID })"><i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i></a> |
                                    <a href="@Url.Action("Delete", "Usuario" , new { id = item.ID })"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

