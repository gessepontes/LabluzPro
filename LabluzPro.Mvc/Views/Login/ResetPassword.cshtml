@model LabluzPro.Domain.Entities.ResetPassword


@{
    ViewData["Title"] = "Lablux";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div>
    <a class="hiddenanchor" id="signup"></a>
    <a class="hiddenanchor" id="signin"></a>
    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                <div>
                    <img src="~/images/logo.png" />
                    <br /><br />
                </div>
                <form asp-action="ResetPasswordConfirm" id="ResetPasswordConfirm" class="form-horizontal form-label-left">
                    <input type="hidden" asp-for="sToken" />

                    <h1>Esqueci a senha</h1>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input type="text" asp-for="sEmail" class="form-control" style="margin: 0px;" disabled/>
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input type="password" asp-for="sSenha" class="form-control" style="margin: 0px;" placeholder="Senha" required="" />
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input type="password" asp-for="sConfirmaSenha" class="form-control" style="margin: 0px;" placeholder="Confirmação de Senha" required="" />
                    </div>
                    <div>
                        <button type="button" onclick="enviar()" class="btn btn-default submit">Salvar</button>
                        <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Index", "Login")'">Sair</button>
                    </div>
                    <br /><br />
                    <div>
                        @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>


<script>

    function enviar() {

        if (document.getElementById("sSenha").value == ""){ 
            alert("Senha é um campo obrigatorio!");
            return false;
        }


        if (document.getElementById("sConfirmaSenha").value == "") {
            alert("Confirmação da senha é um campo obrigatorio!");
            return false;
        }   

        if (document.getElementById("sConfirmaSenha").value != document.getElementById("sSenha").value) {
            alert("A senha e a confirmação da senha não conferem!");
            return false;
        } 

        document.getElementById('ResetPasswordConfirm').submit();
    }
    
</script>
