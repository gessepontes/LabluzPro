@model LabluzPro.Domain.Entities.Usuario

@{
    ViewData["Title"] = "Lablux";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div>
    <a class="hiddenanchor" id="signup"></a>
    <a class="hiddenanchor" id="signin"></a>
    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                <form asp-action="Login" class="form-horizontal form-label-left">
                    <h1>Login</h1>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input type="email" asp-for="sEmail" class="form-control" style="margin: 0px;" placeholder="Email" required="" />
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input type="password" asp-for="sSenha" class="form-control" style="margin: 0px;" placeholder="Senha" required="" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-default submit">Entrar</button>
                        <a class="reset_pass" href="#">Esqueceu sua senha?</a>
                    </div>
                    <br /><br />
                    <div>
                        @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>