@model LabluzPro.Domain.Entities.Usuario

@{
    ViewData["Title"] = "Lablux";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div>
    <a class="hiddenanchor" id="signup"></a>
    <a class="hiddenanchor" id="signin"></a>
    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                <form asp-action="Login" class="form-horizontal form-label-left">
                    <h1>Login</h1>
                    <div>
                        <input type="text" asp-for="sEmail" class="form-control" placeholder="Email" required="" />
                    </div>
                    <div>
                        <input type="password" asp-for="sSenha" class="form-control" placeholder="Senha" required="" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-default submit">Entrar</button>
                        <a class="reset_pass" href="#">Esqueceu sua senha?</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>